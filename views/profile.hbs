<h1 class="text-center main-header">Hi, {{user.email}}</h1>

{{#if user.coos}}
  <section class="column align-center user-coos">
    <h2>Your Coos</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Text</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each user.coos as |coo|}}
        <tr>
          <td>{{id}}</td>
          <td>{{text}}</td>
          <td>
            <a href="/coo/edit/{{coo.id}}">
              <button class="edit-btn">Edit</button>
            </a>
          </td>
          <td>
            <button class="delete-btn" data-id="{{coo.id}}">Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
{{else}}
  <p class="text-center">You have not posted any coos.</p>
{{/if}}

<script src="/js/client.js"></script>